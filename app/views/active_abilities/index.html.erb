<p id="notice"><%= notice %></p>

<h1>Active Abilities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Game ability</th>
      <th>Rounds total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @active_abilities.each do |active_ability| %>
      <tr>
        <td><%= active_ability.name %></td>
        <td><%= active_ability.game_ability %></td>
        <td><%= active_ability.rounds_total %></td>
        <td><%= link_to 'Show', active_ability %></td>
        <td><%= link_to 'Edit', edit_active_ability_path(active_ability) %></td>
        <td><%= link_to 'Destroy', active_ability, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Active Ability', new_active_ability_path %>
