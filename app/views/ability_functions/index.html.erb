<p id="notice"><%= notice %></p>

<h1>Ability Functions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Operation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ability_functions.each do |ability_function| %>
      <tr>
        <td><%= ability_function.name %></td>
        <td><%= ability_function.operation %></td>
        <td><%= link_to 'Show', ability_function %></td>
        <td><%= link_to 'Edit', edit_ability_function_path(ability_function) %></td>
        <td><%= link_to 'Destroy', ability_function, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ability Function', new_ability_function_path %>
