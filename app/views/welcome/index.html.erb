<h1>Welcome to the Throne War: The Fae Realms website!</h1>

<div class="homepage">
  <div class="rules_pages">
    <% if current_user == nil %>
      <p class="links"><%= link_to 'Create an Account', new_user_path %></p>
    <% else %>
      <p class="links"><%= link_to 'Rules Pages', rules_pages_path %></p>
      <%= render 'link_index_display' %>
    <% end %>
  </div>
  <div class="auctions">
    <% if current_user != nil %>
      <div class="characters">
        <%= render 'active_characters_display' %>
      </div>
      <div class="games">
        <%= render 'active_games_display' %>
        <p class="links"><%= link_to 'Index of Games', games_path %></p>
      </div>
    <% end %>
  </div>
  <div class="character_systems">
    <% if current_user != nil %>
      <div class="active_characters">
        <%= render 'active_final_characters_display' %>
      </div>
      <div class="past_characters">
        <%= render 'past_characters_display' %>
        <p class="links"><%= link_to 'Index of Character Systems', character_systems_path %></p>
      </div>
    <% end %>
  <% end %>
</div>
