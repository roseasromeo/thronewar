<% if gm_user? %>
  <%= link_to 'Back to Character Index', game_characters_path(@game) %>
  <td><%= link_to 'Delete', game_character_path(@game, @character), method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>
<%= link_to 'Back to Game', game_path(@game) %>

<!-- ADD LABELS! -->

<%= page_heading @character.pseudonym %>

<p class="character_player">
  Player: <%= @character.user.name %>
</p>
<p class="character_game">
  Game: <%= @character.game.title %>
</p>
<p class="character_points">
  Points Spent: <%= @character.points_spent %>
</p>
<% if @game.complete? %>
  <%= render "pledges_ranks", :character => @character %>
<% end %>
