<% dep_ability = f.depends_on %>
<tr>
  <td class='ability_name'><%= link_to dep_ability.name, ability_path(dep_ability) %></td>
  <td class='type'><%= dep_ability.level.titlecase %><% if dep_ability.automatic %> Automatic <% end %></td>
  <td class='summary'><%= sanitize dep_ability.short_text.html_safe, :tags => %w(p strong b em i u table tr th td a ul ol li), :attributes => %w(href) %></td>
</tr>
