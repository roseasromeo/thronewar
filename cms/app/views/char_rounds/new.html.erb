<h1 class="auction_title">Auction</h1>
<%= render 'games/character_list', :game => @game, :characters => @characters, :aspect_exists => @aspect_exists, :gift_exists => @gift_exists, :aspect_pledges => @last_aspect_pledges, :gift_pledges => @last_gift_pledges %>
<% if !@aspect_exists %>
  <p class="waiting_message">Please wait for your Arbiter to start the Aspect Auction.</p>
<% end %>
<% if !@gift_exists && @aspect_closed %>
  <p class="waiting_message">Please wait for your Arbiter to start the Gift Auction.</p>
<% end %>
<% if @aspect_exists && !@aspect_closed %>
  <%= render 'form' %>
  <% @char_round.pledges.each do |pledge| %>
    <%= pledge.item_id %>
  <% end %>
  <%= params %>
  <%= params[:pledges_attributes] %>
<% end %>
